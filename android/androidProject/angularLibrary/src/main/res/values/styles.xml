<resources>
    /*透明度进入退出*/
    <style name="animByAlpha" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>
    /*从底部进入退出*/
    <style name="animFormBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_down</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_down</item>
    </style>
    /*从顶部进入退出*/
    <style name="animFormTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_top</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_top</item>
    </style>

</resources>
