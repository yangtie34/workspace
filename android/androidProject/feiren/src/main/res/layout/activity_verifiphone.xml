<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <include
        layout="@layout/control_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@id/ly_username"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="34.0dip"
        android:layout_marginRight="34.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal">

        <View
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:background="@drawable/icon_username" />

        <EditText
            android:id="@id/edit_phone"
            style="@style/single_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="34.0dip"
        android:layout_marginRight="34.0dip"
        android:background="#ffdddddd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="34.0dip"
        android:layout_marginRight="34.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginLeft="8.0dip"
            android:background="@drawable/icon_verficode" />

        <EditText
            android:id="@id/edit_code"
            style="@style/single_edit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:background="#ffffffff"
            android:hint="验证码"
            android:inputType="number" />

        <TextView
            android:id="@id/chronomer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/btn_dis_bgs"
            android:gravity="center"
            android:padding="0.0dip"
            android:text="获取验证码"
            android:textColor="#ffff8a00"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="34.0dip"
        android:layout_marginRight="34.0dip"
        android:background="#ffdddddd" />

    <Button
        android:id="@id/btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="50.0dip"
        android:background="@drawable/btn_top_bg_selector"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="16dp" />
</LinearLayout>