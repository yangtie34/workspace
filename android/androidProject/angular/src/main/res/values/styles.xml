<resources>
    /*透明度进入退出*/
    <style name="animByAlpha" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_alpha</item>
        <item name="android:windowExitAnimation">@anim/out_to_alpha</item>
    </style>
    /*缩放进入退出*/
    <style name="animByScale" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_scale</item>
        <item name="android:windowExitAnimation">@anim/out_to_scale</item>
    </style>
    /*从底部进入退出*/
    <style name="animByBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>
    /*从顶部进入退出*/
    <style name="animByTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_top</item>
        <item name="android:windowExitAnimation">@anim/out_to_top</item>
    </style>
    /*从左侧进入退出*/
    <style name="animByLeft" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_left</item>
        <item name="android:windowExitAnimation">@anim/out_to_left</item>
    </style>
    /*从右侧进入退出*/
    <style name="animByRight" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_right</item>
        <item name="android:windowExitAnimation">@anim/out_to_right</item>
    </style>
    /*从底部half进入退出*/
    <style name="animByBottomHalf" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom_half</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom_half</item>
    </style>
    /*从顶部half进入退出*/
    <style name="animByTopHalf" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_top_half</item>
        <item name="android:windowExitAnimation">@anim/out_to_top_half</item>
    </style>
    /*从左侧half进入退出*/
    <style name="animByLeftHalf" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_left_half</item>
        <item name="android:windowExitAnimation">@anim/out_to_left_half</item>
    </style>
    /*从右侧half进入退出*/
    <style name="animByRightHalf" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_right_half</item>
        <item name="android:windowExitAnimation">@anim/out_to_right_half</item>
    </style>
</resources>
